{{ form_start(form) }}
<div id="step">
    <br>
    <div class="form-group row">
        {{ form_label(form.name) }}
        <div class="col-sm-4">
            {{ form_widget(form.name) }}
        </div>
        {{ form_label(form.category) }}
        <div class="col-sm-4">
            {{ form_widget(form.category) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.partner) }}
        <div class="col-sm-4">
            {{ form_widget(form.partner) }}
        </div>
        {{ form_label(form.users) }}
        <div class="col-sm-4">
            {{ form_widget(form.users) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            {{ form_label(form.isDefault) }}
            <div class="col-sm-4">
                {{ form_widget(form.isDefault) }}
            </div>
        </div>
        <div class="col-sm-4 text-right">
            {{ form_end(form) }}
        </div>
        <div class="col-sm-2 text-right">
            <button class="btn btn-bd-primary">{{ button_label|default('w.save'|trans) }}</button>
        </div>
    </div>
</div>
