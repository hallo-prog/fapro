{% extends 'base.html.twig' %}

{% block title %}ProjectTeam{% endblock %}

{% block main %}
    <div class="row" style="max-width: 1024px">
        <div class="col-md-12">
            <a href="{{ path('app_project_team_index') }}"><i class="material-symbols-outlined">list</i></a>&nbsp;&nbsp;
            <a href="{{ path('app_project_team_edit', {'id': project_team.id}) }}"><i
                        class="material-symbols-outlined">edit</i></a>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                {{ include('project_team/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">{{ project_team.name }}</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ project_team.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ project_team.name }}</td>
                            </tr>
                            <tr>
                                <th>Users</th>
                                <td>{{ project_team.users|join(', ') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
