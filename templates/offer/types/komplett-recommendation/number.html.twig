


<div class="form-check{% if answer is defined and answer.image %}{% else %}-inline answer_content{% endif %}">
    <label for="{{ question.name }}" class="funnel{{ question.funnelEnd ? 'End' : 'Start' }} col-form-label">
        {% set value = (context and context[aid] is defined and context[aid]['questions'][question.id]['answer'] is defined) ? context[aid]['questions'][question.id]['answer'] : '' %}
        <input value="{{ value }}" type="number" step="any" title="{{ question.name }}"
                data-class="s-{{ question.id }}"
                data-question="{{ question.id }}"
               data-help-dependencies="{% for answer in question.offerAnswers %}
{%- if answer.helptext %}{{ answer.id }}{% if loop.index != question.offerAnswers|length %}-{% endif %}{% endif %}
{% endfor %}" data-dependencies=""
               style="min-height: 30px;"   name="offer_option[{{ question.id }}]" class="form-control condition-change-text"
        />
    </label>
</div>