{% set value = (context and context['questions'] is defined and context['questions'][question.id]['answer'] is defined) ? context['questions'][question.id]['answer'] : '' %}
{% if value.n is defined %}
    <div class="m-0 p-0" id="answer_from-{{ question.id }}">{{ getAnswer(value.n) }}</div>
{% else %}
    <div class="m-0 p-0" id="answer_from-{{ question.id }}">{{ value }}</div>
{% endif %}