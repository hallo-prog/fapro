    <style>
        .embed-container {
            position: relative;padding-bottom: 600px;height: 0;overflow: hidden;width: 100%;height: auto;
        }
        .embed-container iframe {
            position: absolute;top: 0;left: 0;width: 100%;height: 100%;
        }
        /* Extra small devices (phones, 600px and down) */
        @media only screen and (max-width: 600px) {
            .embed-container {
                position: relative;padding-bottom: 550px;height: 0;overflow: hidden;width: 100%;height: auto;
            }
        }
        /* Small devices (portrait tablets and large phones, 600px and up) */
        @media only screen and (min-width: 600px)  {
            .embed-container {
                position: relative;padding-bottom: 350px;height: 0;overflow: hidden;width: 100%;height: auto;
            }
        }
        /* Medium devices (landscape tablets, 768px and up) */
        @media only screen and (min-width: 768px)  {
            .embed-container {
                position: relative;padding-bottom: 430px;height: 0;overflow: hidden;width: 100%;height: auto;
            }
        }
        /* Large devices (laptops/desktops, 992px and up) */
        @media only screen and (min-width: 992px)  {
            .embed-container {
                position: relative;padding-bottom: 380px;height: 0;overflow: hidden;width: 100%;height: auto;
            }
        }
        /* Extra large devices (large laptops and desktops, 1200px and up) */
        @media only screen and (min-width: 1200px)  {
            .embed-container {
                position: relative;padding-bottom: 350px;height: 0;overflow: hidden;width: 100%;height: auto;
            }
        }
    </style>
    <div class="embed-container">
        <iframe id="responsive-iframe" src="{{ path('app_recommendation', {'frame': 1, 'key': link is defined and link ? link.link : '','kk':1}) }}" width="560" height="390"  class="e-frame"></iframe>
    </div>
    {% if link is defined and link is not null and (errors is not defined or errors == false) %}
        <li>Bei Auftragsabschluss, erwartet Sie und {{ link.fullname }} ein Bonus von {{ link.amount }} &euro;</li>
    {% endif %}
