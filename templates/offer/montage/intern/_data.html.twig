{#                <script src="https://solar.googleapis.com/v1/buildingInsights:findClosest?location.latitude=37.4450&location.longitude=-122.1390&requiredQuality=HIGH&key=AIzaSyAZYlsQNYOOUxcqNAFTFhwBmvX73fpGqwg" defer></script>#}
{#                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAZYlsQNYOOUxcqNAFTFhwBmvX73fpGqwg&callback=initMap&v=weekly" defer></script>#}
                {# {% include 'offer/montage/components/customer_data.html.twig' with {'offer':offer, 'form':form} %} #}
                {# {% include 'offer/montage/components/_auftrags_notice.html.twig' with {'offer':offer, 'form':form} %} #}
                {# {% include 'offer/montage/components/_auftrags_upload.html.twig' with {'offer':offer, 'form':form} %} #}
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button type="submit" class="w-100 montage_button p-2 btn btn-sm btn-primary">{{ 'w.save'|trans }}</button>
            </div>
        </div>

    </div>
</div>