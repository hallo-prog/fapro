<form id="signatureForm" data-action="{{ path('ajax_protocol_changes', {'id':offer.id, 'type': 'pv_deck'}) }}">
    <div class="card page_card" data-controller="upload">
        <div class="card-body" style="min-height: 900px;background: whitesmoke;">
            {% if protocol is defined and protocol.id %}
                <input type="hidden" name="pv_deck[protocol][id]" value="{{ protocol.id }}">
            {% endif %}
            <input type="hidden" name="pv_deck[protocol][type]" value="pv_deck">
            <div id="checkerDiv4" class="ccd p-2">
                {% include 'offer/montage/intern/checkpage/pv_deck/_check_page1_deckblatt.html.twig' %}
            </div>
        </div>
    </div>
</form>