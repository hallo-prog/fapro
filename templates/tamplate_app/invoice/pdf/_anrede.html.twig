<div class="row headBoxSalutation page-wellcome m-0" style="width: 100%;padding: 20px 0 0 50px;overflow: visible;height: 300px !important;">
    <div class="col-8 py-0 m-0 pr-4 pl-0">
        <div class="contactPerson px-0 pt-0 pb-4 m-0">
            <h3 style="margin-bottom: 0;margin-top: 20px">{% if offer.customer.companyName == '' %}{{ offer.customer.sex|trans }} {% endif %} {{ offer.customer.fullName }}</h3>
            <p style="margin-bottom: 0;margin-top: 6px;">{{ offer.customer.address }}</p>
            <p style="margin-bottom: 6px;">{{ offer.customer.zip }} {{ offer.customer.city }}</p>
            <p style="margin-bottom: 0"><img alt="{{ 'w.email'|trans }}" style="width: 14px;" src="{{ absolute_url(asset('svgs/black/email.png')) }}"> {{ offer.customer.email }}</p>
