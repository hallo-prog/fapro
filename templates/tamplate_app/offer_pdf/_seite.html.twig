<div class="row hBox headBoxSmall page-pager pt-1">
    <div class="col-6 m-0 p-0">
        {% if text is defined %}<span style="font-weight:normal;color:#fff;margin-top:-2px !important">{{ text }}</span> {% endif %}
    </div>
    <div class="text-right col-6 m-0 p-0">
        <p class="smaller" style="font-weight: bold">{{ 'o.pageNumber'|trans({'%page%':page}) }}</p>
    </div>
</div>