<h3 class="p-0">
    <strong>
        {% if offer.customer.companyName|length %}
            {{ offer.customer.companyName }}
        {% else %}
            {{ offer.customer.sex|trans }} {{ offer.customer.fullNormalName }}
        {% endif %}
    </strong>
</h3>
<div>
    {% if offer.customer.companyName|length %}
        {{ offer.customer.sex|trans }} {{ offer.customer.fullNormalName }}
    {% endif %}
    <p class="m-0 px-0 pt-2 pb-0"><img style="width: 14px;" src="{{ getImgContent(asset('svgs/black/phone.png')) }}"> {{ offer.customer.phone }}</p>
    <p class="m-0 p-0"><img style="width: 14px;" src="{{ getImgContent(asset('svgs/black/email.png')) }}"> {{ offer.customer.email }}</p>

    <p class="m-0 px-0 pt-2 pb-0">{{ offer.customer.address }},<br>{{ offer.customer.zip }} {{ offer.customer.city }}</p>
</div>