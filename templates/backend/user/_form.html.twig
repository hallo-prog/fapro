{{ form_start(form) }}
<style>
    .avatar {
        vertical-align: middle;
        width: 150px;
        height: 150px;
        border-radius: 50%;
    }
    .form-check .form-check-input {
        width: 14px;
        height: 14px;
    }
</style>
<div class="form-group row">
    <div class="col-4">
        {% if user.image %}
            <img id="profile_preview" src="{{ asset(appAssetPath~'user/'~user.image) }}?v={{ random(100000, 999999) }}" alt="Avatar" class="avatar">
        {% else %}
            <img id="profile_preview" src="{{ asset('app/images/not_available.png') }}" alt="Avatar" class="avatar">
        {% endif %}
    </div>
    <div class="col-8">
        <label for="{{ form.image.vars.id }}" style="cursor: pointer">{{ form.image.vars.label|trans }}<span class="material-icons">backup</span></label>
        {{ form_widget(form.image) }}
    </div>
</div>
<div class="form-group row">

    {% if form.positionName is defined %}
        <div class="col-4 col-md-4">
            {{ form_row(form.salutation) }}
        </div>
        <div class="col-8 col-md-8">
            {{ form_row(form.fullName) }}
        </div>
        <div class="col-12 col-md-4">
            {{ form_row(form.positionName) }}
        </div>
        <div class="col-12 col-md-8">
            {{ form_row(form.username) }}
        </div>
    {% else %}
        <div class="col-4 col-md-4">
            {{ form_row(form.salutation) }}
        </div>
        <div class="col-8 col-md-4">
            {{ form_row(form.fullName) }}
        </div>
        <div class="col-12 col-md-4">
            {{ form_row(form.username) }}
        </div>
    {% endif %}
</div>

<div class="form-group row">
    <div class="col-4">
        {{ form_row(form.email) }}
    </div>
    <div class="col-8">
        {{ form_row(form.phone) }}
    </div>
</div>
<div class="form-group row">
    {% if form.status is defined %}
        <div class="col-4 col-md-2" style="padding-left: 34px;">
            {{ form_row(form.status) }}
        </div>
        <div class="col-8 col-md-2">
            {{ form_row(form.color) }}
            {{ form_row(form.slackId) }}
            {{ form_row(form.slackLog) }}
        </div>
        <div class="col-12 col-md-8" style="padding-left: 34px;">
            {{ form_row(form.roles) }}
        </div>
    {% else %}
        <div class="col-4 col-md-4">
            {{ form_row(form.color) }}
            {{ form_row(form.slackId) }}
        </div>
        {% if form.plainPassword is defined %}
                <div class="col-8">
                    {{ form_row(form.plainPassword) }}
                </div>
        {% endif %}
    {% endif %}
</div>
{% if form.notice is defined %}
<div class="form-group row">
    <div class="col-12">
        {{ form_row(form.notice) }}
    </div>
</div>
{% endif %}

<div class="text-right"><button class="btn btn-primary btn-sm">{{ 'w.save'|trans }}</button></div>
{{ form_widget(form._token) }}
{{ form_end(form, {'render_rest':false}) }}
