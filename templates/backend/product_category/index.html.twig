{% extends 'base.html.twig' %}

{% block title %}ProductCategory index{% endblock %}

{% block main %}
    {% include 'backend/components/_menu.html.twig' with {
        'productlistLi': {'n':'w.productCategories'|trans},
    } %}
    <table class="table">
        <thead>
            <tr style="background-color: {{ sfColor }};color: #fff">
                <th class="name">{{ 'w.id'|trans }}</th>
                <th class="name">{{ 'w.name'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for product_category in product_categories %}
            <tr>
                <td class="w-5">{{ product_category.id }}</td>
                <td class="w-auto"><a href="{{ path('backend_product_subcategory_index', {'category':product_category.id}) }}">{{ product_category.name }}</a></td>
                <td class="w-5 text-right"><a href="{{ path('backend_product_category_edit', {'id': product_category.id}) }}"><i class="material-symbols-outlined">edit</i></a></td>
            </tr>
        {% else %}
            {% include 'backend/_no_entry.html.twig' with {'collSpan': 2} %}
        {% endfor %}
        </tbody>
    </table>
    <div class="text-right">
        <a class="btn btn-light btn-sm" href="{{ path('backend_product_category_new') }}">Produktkategorie hinzuf√ºgen <span style="color: {{ sfColorDark }};" class="material-symbols-outlined">add_circle</span></a>
    </div>
{% endblock %}
