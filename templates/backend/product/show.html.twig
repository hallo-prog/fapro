{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block main %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">{{ product.name }}</h4>
                <p class="category"></p>
            </div>
            <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'w.id'|trans }}</th>
                <td class="text-right">{{ product.id }}</td>
            </tr>
            <tr>
                <th>{{ 'w.name'|trans }}</th>
                <td class="text-right">{{ product.name }}</td>
            </tr>
            {% if product.productSubCategory.mainProduct %}
                <tr>
                    <th>{{ product.valueName }}</th>
                    <td class="text-right">{{ product.kw }}</td>
                </tr>
             {% else %}
                <tr>
                    <th></th>
                    <td class="text-right">{{ product.kw }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Description</th>
                <td class="text-right">{{ product.description }}</td>
            </tr>
            <tr>
                <th>Kategorie</th>
                <td class="text-right">{{ product.productCategory.name }} -> {{ product.productSubCategory.name }}</td>
            </tr>
            <tr>
                <th>Bruttopreis</th>
                <td class="text-right">{{ product.price|number_format(2,',','.') }} &euro;</td>
            </tr>
{#            <tr>#}
{#                <th>Tax {{ product.tax }}% </th>#}
