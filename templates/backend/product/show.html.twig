{#                <th>Brutto</th>#}
{#                <td class="text-right">{{ ((appTax*product.price/100)+product.price)|number_format(2,',','.') }} &euro;</td>#}
{#            </tr>#}
        </tbody>
    </table>
            </div>
        </div>
    </div>
</div>
