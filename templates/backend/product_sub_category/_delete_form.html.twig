
<form id="delete_product_sub_category_form" method="post" action="{{ path('backend_product_subcategory_delete', {'category': product_sub_category.id, 'id': product_sub_category.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-product-sub-category-' ~ product_sub_category.id) }}">
    <div class="form-group row">
        <div class="col-12 text-center">
            {% if product_sub_category.id is not null %}
                <button data-confirm="{{ 'f.confirm.pscDelete'|trans }}. {{ 'f.confirm.pInvolved'|trans({'%number%':product_sub_category.products|length}) }}"
                        class="confirm btn btn-danger" type="button">{{ 'w.delete'|trans }}</button>
            {% endif %}
        </div>
    </div>
</form>
